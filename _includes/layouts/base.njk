<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

  {% include "layouts/components/head.njk" %}

  <body{% if section %} class="section-{{ section }}"{% endif %}>
      <!-- Analytics & Tag Manager -->
    {% if env.isProd %}
      {% include "layouts/components/tagmanager-body.njk" %}
    {% endif %}

    {% include "layouts/components/site-header.njk" %}


    <main id="main"{% if main_classes %} class="{% for class in main_classes %}{{class}} {% endfor %}"{% endif %}>
      {{ layoutContent | safe }}
    </main>

    {% include "layouts/components/site-footer.njk" %}

    <!-- Analytics & Tag Manager -->
    {% if env.isProd %}
      {% include "layouts/components/google-analytics.njk" %}
    {% endif %}
    
  </body>
</html>
