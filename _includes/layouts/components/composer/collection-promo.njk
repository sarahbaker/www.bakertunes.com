{% set itemTitle %}{% endset %}
{% set itemUrl %}{% endset %}
{% set itemExcerpt %}{% endset %}
{% for item in collections.composerIndex %}
  {% if filePathStem == item.filePathStem %}
    {% set itemTitle %}{{ item.data.title }}{% endset %}
    {% set itemUrl %}{{ item.url }}{% endset %}
    {% set itemExcerpt %}{{ item.data.excerpt }}{% endset %}
  {% endif %}
{% endfor %}

<div class="composer-content-item composer-content-item-{{ itemTitle | slug }}">
  <div class="composer-content-item--header">
    <h2><a href="{{ itemUrl }}">{{ itemTitle }}</a></h2>

    {% if itemExcerpt %}
    <div class="excerpt">
      {{ itemExcerpt }}
    </div>
    {% endif %}
  </div>
  <div class="composer-content-item--products">
    {% for i in range(0, 3) %}
      <div class="composer-content-item--product faux-block-link-parent">
        <h3><a href="{{ collection[i].url }}">{{ collection[i].data.title }}</a></h3>
        {% if collection[i].data.youtube_id %}
        <figure class="fg-image">
          <img src="https://img.youtube.com/vi/{{ collection[i].data.youtube_id }}/mqdefault.jpg" title="{{ collection[i].data.title }}" class="img img-rounded img-responsive">
        </figure>
        {%elif collection[i].data.youtube_playlist.id %}
        <figure class="fg-image">
          <img src="https://img.youtube.com/vi/{{ collection[i].data.youtube_playlist.thumbnail_id }}/mqdefault.jpg" title="{{ collection[i].data.title }}" class="img img-rounded img-responsive">
        </figure>
        {% elif collection[i].data.soundcloud_id %}
        <figure class="fg-image">
          <img src="https://i1.sndcdn.com/avatars-000053069287-52pkew-t500x500.jpg" title="{{ collection[i].data.title }}" class="img img-rounded img-responsive">
        </figure>
        {% elif collection[i].data.image %}
        <figure class="fg-image">
          <img src="{{ collection[i].data.image }}" title="{{ collection[i].data.title }} resource" class="img img-rounded img-responsive img-full" />
        </figure>
        {% endif %}
        <a href="{{ collection[i].url }}" class="faux-block-link"><span class="hide-text" aria-hidden="true">{{ collection[i].data.title }}</span></a>
      </div>
    {% endfor %}
  </div>
</div>