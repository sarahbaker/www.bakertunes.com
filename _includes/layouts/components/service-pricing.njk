<div class="service-pricing">
  <h3 class="h2-style">{% if pricing.title %}{{ pricing.title }}{% else %}Pricing{% endif %}</h3>

  <div class="price large-body-text">
    <strong>
      {% if pricing.price %}
      <div class="h1-style">
        {% if pricing.prefix %}
        <span class="prefix supporting-text">{{ pricing.prefix }}</span>
        {% endif %}
      {{ pricing.price }}
      </div>
      {% endif %}
      {% if pricing.basis %}
      <small>{{ pricing.basis }}</small>
      {% endif %}
    </strong>
  </div>

  {% if pricing.benefits %}
  <p>{{ pricing.benefits.title }}<p>

  <ul>
  {% for item in pricing.benefits.list %}
    <li>{{ item }}</li>
  {% endfor %}
  </ul>
  {% endif %}

  {% if pricing.suffix %}
  <p>{{ pricing.suffix }}</p>
  {% endif %}
  
</div>
