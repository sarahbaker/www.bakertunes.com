<div class="service-pricing">
  <h3 class="h2-style">{% if pricing.title %}{{ pricing.title }}{% else %}Pricing{% endif %}</h3>

  <p class="price">
    <strong>
      {% if pricing.price %}
      <span class="h1-style">{{ pricing.price }}</span>
      {% endif %}
      {% if pricing.basis %}
      <small>{{ pricing.basis }}</small>
      {% endif %}
    </strong>
  </p>

  {% if pricing.benefits %}
  <p>{{ pricing.benefits.title }}<p>

  <ul>
  {% for item in pricing.benefits.list %}
    <li>{{ item }}</li>
  {% endfor %}
  </ul>
  {% endif %}

  {% if pricing.suffix %}
  <p>{{ pricing.suffix }}</p>
  {% endif %}
  
</div>
